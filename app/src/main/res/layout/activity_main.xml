<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scroll"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/hscroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:hint="search"
            android:id="@+id/enter_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_insert"
                android:text="INSERT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/button_sort"
                android:text="INSERT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/button_show"
                android:text="SHOW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/button_search"
                android:text="SEARCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <TableLayout
            android:id= "@+id/tablelayout"
            android:layout_width= "match_parent"
            android:layout_height= "wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#c0c0c0">

                <TextView
                    android:text="№"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Индекс(цвет)"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="id человека"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Фамилия"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Имя"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Пол"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Возраст"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Город Проживания"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Когда был в сети"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Образование"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Есть фотографии"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Интересы"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Число Сообществ"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Число друзей"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Число подписчиков"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />

                <TextView
                    android:text="Телефон"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:padding="5dp" />


            </TableRow>
        </TableLayout>

    </LinearLayout>

    </HorizontalScrollView>

</ScrollView>